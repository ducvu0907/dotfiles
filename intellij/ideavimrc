let mapleader = " "

set hlsearch
set ignorecase
set smartcase
set visualbell
set incsearch

nnoremap Y y$
nmap <C-w>q :q<CR>
nmap <C-w>\\ :vs<CR>
nmap <C-w>- :sp<CR>
nmap <C-o> :action Back<CR>
nmap <C-i> :action Forward<CR>
nmap <tab> :action NextTab<CR>
nmap <S-tab> :action PreviousTab<CR>

Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'

{
  "editor.tabSize": 2,
  "workbench.startupEditor": "none",
  "html.autoCreateQuotes": false,
  // vim config
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
  },
  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.handleKeys": {
    "<C-j>": false,
    "<C-k>": false,
    "<C-l>": false,
    "<C-h>": false,
    "<C-e>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-w>",
        "\\"
      ],
      "commands": [
        ":vsplit"
      ],
    },
    {
      "before": [
        "<C-w>",
        "-"
      ],
      "commands": [
        ":split"
      ],
    },
    {
      "before": [
        "<tab>"
      ],
      "commands": [
        ":bnext"
      ],
    },
    {
      "before": [
        "<S-tab>"
      ],
      "commands": [
        ":bprev"
      ],
    },
    {
      "before": [
        "<S-k>"
      ],
      "commands": [
        "editor.action.showHover"
      ],
      "silent": true
    },
    {
      "before": [
        "<S-y>"
      ],
      "after": [
        "v",
        "$",
        "y"
      ]
    },
  ],
}
